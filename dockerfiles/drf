FROM python:latest

RUN apt-get update \
    && apt-get install -yq --no-install-recommends \
        python3-psycopg2 \
        postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# TODO: Give UID using env vars
RUN useradd -b /opt -ms /bin/bash -u 1000 api

WORKDIR /opt/api
COPY requirements.txt ./
RUN pip install -r requirements.txt
RUN pip install psycopg2 gunicorn

COPY ./src/api /opt/api

EXPOSE 8000
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]

# Uncomment to use Gunicorn
# ENV GUNICORN_CMD_ARGS="--bind=0.0.0.0 --workers=3 --reload"
# CMD ["gunicorn", "api.wsgi"]