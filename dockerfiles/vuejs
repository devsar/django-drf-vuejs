FROM node:lts

# Change node user uid and gid from `1000` to `10000`
# So it not clashes with local user (that in most cases is `1000`)
RUN usermod -u 10000 node
RUN groupmod -g 10000 node

# TODO: Give UID using env vars
RUN useradd -b /opt -ms /bin/bash -u 1000 frontend

# make the 'app' folder the current working directory
WORKDIR /opt/frontend

USER frontend

# copy project files and folders to the current working directory (i.e. 'app' folder)
# COPY ./src/frontend/ .

EXPOSE 8080
